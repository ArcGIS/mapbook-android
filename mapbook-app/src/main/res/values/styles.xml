<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>
    <style name="PrevButton" parent="ThemeOverlay.AppCompat.Light">
        <!-- customize colorButtonNormal for the disable color -->
        <!-- customize colorAccent for the enabled color -->
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:drawable">@drawable/ic_navigate_before_black_36px</item>

    </style>
    <style name="NextButton" parent="ThemeOverlay.AppCompat.Light">
    <!-- customize colorButtonNormal for the disable color -->
    <!-- customize colorAccent for the enabled color -->
    <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:drawable">@drawable/ic_navigate_next_black_36px</item>
</style>
    <style name="CloseButton" parent="ThemeOverlay.AppCompat.Light">
        <!-- customize colorButtonNormal for the disable color -->
        <!-- customize colorAccent for the enabled color -->
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:drawable">@drawable/ic_clear_black_36px</item>
    </style>
</resources>
